{{#partial "body"}}
        <div>
            <h1 class="main ">Ask Your Tutors</h1>
        </div>

        <div class="row">
            <form action="//formspree.io/tutors.edulearn@gmail.com" method="post">
                <label for="name">Name</label>
                <input type="text" id="fname" name="name" placeholder="Enter Your Name" required>

                <label for="email">Email address</label>
                <input type="text" id="email" name="email-address" placeholder="Enter Your Email Address" required>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Subject</label>
                    </div>
                    <select class="custom-select" id="inputGroupSelect01">
                        <option value="1" name="mathematics">Mathematics</option>
                        <option value="2" name="Science">Science</option>
                    </select>
                </div>

                <label for="message">Ask your question</label>
                <textarea id="text" name="message" placeholder="Write something" style="height:200px" required></textarea>

                <button class="btn btn-info" type="submit">Submit</button>
    </form>
        </div>
{{/partial}}

{{> layout.hbs }}